<%= form_with model: @sample_type do |f| %>
  <%= render "partials/error_messages", :target => @sample_type %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :tissue %><br />
    <%= f.text_field :tissue %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
