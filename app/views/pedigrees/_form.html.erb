<%= form_for(@pedigree) do |f| %>
  <%= render "partials/error_messages", :target => @pedigree %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </div>
  <div class="field">
    <%= f.label :study %><br />
    <%= collection_select(:pedigree, :study_id, Study.order(:name), :id, :name, options = {:prompt => '-Select a study for this pedigree'}, :selected => params[:study_id], :class => "study_select") %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
